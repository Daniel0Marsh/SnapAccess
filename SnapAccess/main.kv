<MainWindow>:
    name: "login"
    password: password

    FloatLayout:


        Image:
            source:'image/background.png'
            allow_stretch: True
            keep_ratio: False

        Image:
            source:'image/login.png'
            keep_ratio: False
            pos_hint: {"center_x":.5}
            pos: 0, 135
            size_hint_y: None
            height:290
            size_hint_x: None
            width: 300

        Image:
            source:'image/logo_transparent.png'
            keep_ratio: False
            pos_hint: {"center_x":.5}
            pos: 0, 310
            size_hint_y: None
            height:100
            size_hint_x: None
            width: 100


        Label:
            text:"Developed by Daniel Marsh                                            Desktop version 1.0"
            background_color: (.1, .1, .1, .1)
            font_size: 10
            pos_hint: {"center_x":.5}
            pos: 0, 10
            size_hint: 0.35, 0.15

        Label:
            text: "Login to SnapAccess"
            font_size: 25
            pos_hint: {"center_x": .5}
            pos: 0, 410
            size_hint: 0.35, 0.15
            font_name: "Arial"  # Specify the font name
            bold: True  # Make the text bold
            color: 1, 1, 1, 1  # Set the text color (white in this case)

        TextInput:
            id: password
            text_color: (1, 1, 1, 1)
            background_color: (.238, .238, .238, .238)
            background_normal: ''
            font_size: 24
            multiline: False
            password: True
            pos_hint: {"center_x":.5}
            pos: 0, 250
            size_hint_y: None
            height:30
            size_hint_x: None
            width: 239


        Button:
            background_color: (.398, .398, .398, .298)
            font_size: 20
            pos_hint: {"center_x":.5, }
            pos: 20, 185
            size_hint_y: None
            height:34
            size_hint_x: None
            width: 239
            text: "Login"
            on_release:
                root.login()

        Button:
            background_color: (0, 0, 0, 0)
            pos_hint:{"x":.535}
            pos: 0, 280
            size_hint_y: None
            size_hint_x: None
            height: 20
            width: 80
            text: ""
            on_release:
                root.forgot_pas()


