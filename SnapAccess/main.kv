<MainWindow>:
    name: "login"
    password: password

    FloatLayout:


        Image:
            source:'image/background.png'
            allow_stretch: True
            keep_ratio: False

        Image:
            source:'image/login.png'
            keep_ratio: False
            pos_hint: {"center_x":.5}
            pos: 0, 200
            size_hint_y: None
            height:400
            size_hint_x: None
            width: 600

        Image:
            source:'image/logo_transparent.png'
            keep_ratio: False
            pos_hint: {"center_x":.5}
            pos: 0, 430
            size_hint_y: None
            height:140
            size_hint_x: None
            width: 140


        Label:
            text:"Developed by Daniel Marsh                                            Desktop version 1.0"
            background_color: (.1, .1, .1, .1)
            font_size: 20
            pos_hint: {"center_x":.5}
            pos: 0, 5
            size_hint: 0.35, 0.15

        Label:
            text: "Login to SnapAccess"
            font_size: 40
            pos_hint: {"center_x":0.5}
            pos:0, 610
            size_hint: 0.35, 0.15
            font_name: "Arial"  # Specify the font name
            bold: True  # Make the text bold
            color: 1, 1, 1, 1  # Set the text color (white in this case)

        TextInput:
            id: password
            text_color: (1, 1, 1, 1)
            background_color: (.238, .238, .238, .238)
            background_normal: ''
            font_size: 24
            multiline: False
            password: True
            pos_hint: {"center_x":.5}
            pos: 0, 340
            size_hint_y: None
            height:40
            size_hint_x: None
            width: 300


        Button:
            background_color: (.398, .398, .398, .298)
            font_size: 20
            pos_hint: {"center_x":.5, }
            pos: 20, 260
            size_hint_y: None
            height:40
            size_hint_x: None
            width: 300
            text: "Login"
            on_release:
                root.login()

        Button:
            background_color: (0, 0, 0, 0)
            pos_hint:{"x":.535}
            pos: 0, 400
            size_hint_y: None
            size_hint_x: None
            height: 20
            width: 120
            text: ""
            on_release:
                root.forgot_pas()


